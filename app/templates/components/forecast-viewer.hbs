{{#if location.alerts}}
    <h3>Alerts</h3>
    {{#each location.alerts as |alert|}}
    <p>{{alert.title}}</p>
    <p>Expires: {{alert.expires}}</p>
    {{/each}}
{{/if}}

<h3>Current Weather</h3>
<p>{{location.currently.summary}}</p>
<p>Temperature: {{location.currently.temperature}}째F</p>
<p>Feels Like: {{location.currently.apparentTemperature}}째F</p>

<h3>Next 7 Days</h3>
<p>{{location.daily.summary}}</p>
<ul>
    {{#each location.daily.data as |day|}}
    <li>
        <h4>{{moment-format day.time 'dddd' 'X'}}</h4>
        <p>{{day.summary}}</p>
        <ul>
            <li>Low: {{day.temperatureMin}}째F at {{moment-format day.temperatureMinTime 'h:mm a' 'X'}}</li>
            <li>High: {{day.temperatureMax}}째F at {{moment-format day.temperatureMaxTime 'h:mm a' 'X'}}</li>
        </ul>
    </li>
    {{/each}}
</ul>
